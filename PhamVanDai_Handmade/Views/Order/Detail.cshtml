@model PhamVanDai_Handmade.Models.ViewModels.OrderDetailViewModel

@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.OrderID;
}

<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <vc:categories></vc:categories>
            </div>
            <div class="col-lg-9">
                @Html.Partial("_SearchPartial")
            </div>
        </div>
    </div>
</section>

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/User/img/breadcrumb.png">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Chi tiết đơn hàng</h2>
                    <div class="breadcrumb__option">
                        <a asp-action="Index" asp-controller="Home">Trang chủ</a>
                        <a asp-action="Index" asp-controller="Order">Lịch sử đơn hàng</a>
                        <span>Chi tiết đơn hàng #@Model.OrderID</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="card mb-4 mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Thông tin đơn hàng</h5>
                        <dl class="row">
                            <dt class="col-sm-3">Mã đơn hàng</dt>
                            <dd class="col-sm-9">#@Model.OrderID</dd>

                            <dt class="col-sm-3">Ngày đặt</dt>
                            <dd class="col-sm-9">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</dd>

                            <dt class="col-sm-3">Trạng thái</dt>
                            <dd class="col-sm-9">
                                <span class="badge @(Model.Status == 0 ? "bg-secondary" :
                                          Model.Status == 1 ? "bg-info" :
                                          Model.Status == 2 ? "bg-primary" :
                                          Model.Status == 3 ? "bg-success" :
                                          Model.Status == 4 ? "bg-warning" : "bg-danger")">@Model.StatusText</span>
                            </dd>

                            <dt class="col-sm-3">Thanh toán</dt>
                            <dd class="col-sm-9">
                                <span class="badge @(Model.PaymentStatus == 1 ? "bg-warning" :
                                                     Model.PaymentStatus == 2 ? "bg-success" :
                                                     Model.PaymentStatus == 3 ? "bg-success": "bg-danger")">
                                    @Model.PaymentStatusText
                                </span>
                            </dd>

                            <dt class="col-sm-3">Phí vận chuyển</dt>
                            <dd class="col-sm-9">@Model.ShippingFee.ToString("N0") đ</dd>

                            <dt class="col-sm-3">Mã giảm giá</dt>
                            <dd class="col-sm-9">@Model.CouponCode</dd>

                            <dt class="col-sm-3">Tổng tiền</dt>
                            <dd class="col-sm-9 fw-bold text-danger">@Model.TotalAmount.ToString("N0") đ</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card mb-4 mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Thông tin người đặt</h5>
                        <dl class="row">
                            <dt class="col-sm-3">Tài khoản</dt>
                            <dd class="col-sm-9">@Model.UserName</dd>

                            <dt class="col-sm-3">Email</dt>
                            <dd class="col-sm-9">@Model.Email</dd>
                        </dl>

                        <h5 class="card-title">Thông tin người nhận</h5>
                        <dl class="row">
                            <dt class="col-sm-3">Tên</dt>
                            <dd class="col-sm-9">@Model.DeliveryAddress.Name</dd>

                            <dt class="col-sm-3">Số điện thoại</dt>
                            <dd class="col-sm-9">@Model.DeliveryAddress.PhoneNumber</dd>

                            <dt class="col-sm-3">Địa chỉ</dt>
                            <dd class="col-sm-9">@Model.DeliveryAddress.Address</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh sách sản phẩm</h5>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Ảnh</th>
                                    <th>Sản phẩm</th>
                                    <th>Size</th>
                                    <th>Màu</th>
                                    <th>Số lượng</th>
                                    <th>Giá</th>
                                    <th>Tổng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>
                                            <img src="/img/@item.Image" alt="@item.ProductName" style="width: 150px; height: auto;" />
                                        </td>
                                        <td>@item.ProductName</td>
                                        <td>@item.Size</td>
                                        <td>@item.Color</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Price.ToString("N0") đ</td>
                                        <td>@((item.Price * item.Quantity).ToString("N0")) đ</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</section>
    





