@model PhamVanDai_Handmade.Models.DeliveryAddressModel

@{
    ViewData["Title"] = "Thêm địa chỉ mới";
}
<section class="breadcrumb-section set-bg" data-setbg="/User/img/breadcrumb.png">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Sửa địa chỉ giao hàng</h2>
                    <div class="breadcrumb__option">
                        <a asp-action="Index" asp-controller="Home">Trang chủ</a>
                        <a asp-action="Index" asp-controller="Checkout">Đặt hàng</a>
                        <span>Sửa địa chỉ</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="checkout spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <form asp-action="Edit" asp-controller="Address" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="AddressID"/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="checkout__input">
                        <p>Họ và tên<span>*</span></p>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="checkout__input">
                        <p>Số điện thoại<span>*</span></p>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="checkout__input">
                        <p>Địa chỉ<span>*</span></p>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <button type="submit" class="site-btn">Sửa địa chỉ</button>
                </form>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        /* CSS cho form gọn gàng hơn */
        .checkout__input {
            margin-bottom: 20px;
        }

            .checkout__input p {
                color: #1c1c1c;
                font-weight: 600;
                margin-bottom: 8px;
            }

                .checkout__input p span {
                    color: red;
                }

            .checkout__input input, .checkout__input select {
                height: 46px;
                width: 100%;
                border: 1px solid #e1e1e1;
                padding-left: 15px;
                font-size: 14px;
            }
    </style>
}
