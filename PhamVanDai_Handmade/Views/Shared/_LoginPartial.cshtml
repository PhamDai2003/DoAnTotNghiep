<div class="overlay" id="overlay">
    <div class="modal-box" id="modalBox">
        <span class="close-icon" id="closeBtn">&times;</span>

        <!-- Left Panel -->
        <div class="item left-panel">
            <div class="form-box text-center">
                    <h3 id="formTitle"></h3>
                    <!-- Form Login -->
                    <form id="loginForm" asp-action="Login" asp-controller="Account" method="post">
                    @Html.AntiForgeryToken()
                    <div id="loginErrorMessage" class="text-danger mb-2"></div>
                        <div class="mb-3">
                            <input name="Email" type="email" class="form-control" placeholder="Email" required />
                        </div>
                        <div class="mb-3">
                            <input name="Password" type="password" class="form-control" placeholder="Mật khẩu" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                        
                    </form>

                    <!-- Form Register -->
                <form id="registerForm" method="post" style="display:none;">
                    @Html.AntiForgeryToken()

                    <div id="registerErrorMessage" class="text-danger mb-2"></div>

                    <div class="mb-3">
                        <input name="Username" class="form-control" placeholder="Tên" required />
                    </div>
                    <div class="mb-3">
                        <input name="Email" type="email" class="form-control" placeholder="Email" required />
                    </div>
                    <div class="mb-3">
                        <input name="Phone" type="tel" class="form-control" placeholder="Số điện thoại" required />
                    </div>
                    <div class="mb-3">
                        <input name="Password" type="password" class="form-control" placeholder="Mật khẩu" required />
                    </div>
                    <div class="mb-3">
                        <input name="ConfirmPassword" type="password" class="form-control" placeholder="Xác nhận mật khẩu" required />
                    </div>
                    <button type="submit" class="btn btn-success w-100">Đăng ký</button>
                </form>
                    <!-- Swap link -->
                    <p class="mt-3" id="swapText">
                        Chưa có tài khoản? <a href="#" id="swapLink">Đăng ký</a>
                    </p>

            </div>
        </div>

        <!-- Right Panel -->
        <div class="item right-panel"></div>
    </div>
</div>
