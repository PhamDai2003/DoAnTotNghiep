@model PhamVanDai_Handmade.Models.ViewModels.ContactViewModel

<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <!--categories-->
                <vc:categories></vc:categories>
            </div>
            <div class="col-lg-9">
                @Html.Partial("_SearchPartial")
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="../../../User/img/breadcrumb.png">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Liên hệ</h2>
                    <div class="breadcrumb__option">
                        <a asp-action="Index" asp-controller="Home">Trang chủ</a>
                        <span>Liên hệ</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_phone"></span>
                    <h4>Điện thoại</h4>
                    <p>+84-388-447-685</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_pin_alt"></span>
                    <h4>Địa chỉ</h4>
                    <p>Đại học công nghiệp Hà Nội</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_clock_alt"></span>
                    <h4>Thời gian mở của</h4>
                    <p>10:00 am đến 23:00 pm</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_mail_alt"></span>
                    <h4>Email</h4>
                    <p>phamdaimp40@gmail.com</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->
<!-- Map Begin -->
<div class="map">
    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d119151.16121491983!2d105.735107!3d21.053731!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31345457e292d5bf%3A0x20ac91c94d74439a!2sHanoi%20University%20of%20Industry!5e0!3m2!1sen!2sus!4v1759325997280!5m2!1sen!2sus"
            height="500" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
    <div class="map-inside">
        <i class="icon_pin"></i>
        <div class="inside-widget">
            <h4>Trường Đại học Công nghiệp Hà Nội</h4>
            <ul>
                <li>Điện thoại: +84-388-447-685</li>
                <li>Địa chỉ: Số 298 Đ. Cầu Diễn, Minh Khai, Bắc Từ Liêm, Hà Nội, Vietnam</li>
            </ul>
        </div>
    </div>
</div>
<!-- Map End -->
<!-- Contact Form Begin -->
@if (User.Identity.IsAuthenticated)
{
    <div class="contact-form spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="contact__form__title">
                        <h2>Gửi tin nhắn về cho cửa hàng</h2>
                    </div>
                </div>
            </div>
            <form asp-action="SendMessage" asp-controller="Contact" method="post">
                <div class="row">
                    <p class="col-12">
                        Lưu ý: Các tin nhắn hoàn hàng yêu cầu đính kèm mã đơn và lý do hoàn hàng.  
                    </p>

                    <div class="col-12">
                        <strong>Tên: </strong> @Model?.Name
                    </div>
                    <div class="col-12">
                        <strong>Email: </strong> @Model?.Email
                    </div>
                    <div class="col-12">
                        <strong>Số điện thoại: </strong> @Model?.PhoneNumber
                    </div>

                    <div class="col-lg-12 text-center">
                        <textarea asp-for ="Message" placeholder="Tin nhắn của bạn..." required></textarea>
                        <button type="submit" class="site-btn">GỬI TIN NHẮN</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        Vui lòng <a href="javascript:void(0);" onclick="openLogin()">Đăng nhập</a> để liên hệ với chúng tôi.
    </div>
}

<!-- Contact Form End -->