@model IEnumerable<PhamVanDai_Handmade.Models.ProductModel>

@{
    ViewData["Title"] = "Trash";
}

<main id="main" class="main">


    <div class="pagetitle">
        <h1>Quản lý sản phẩm</h1>
    </div><!-- End Page Title -->
    <div class="mb-3">
        <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
        </a>
    </div>
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh sách sản phẩm đã xóa</h5>
                        <!-- Table with stripped rows -->
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Hình ảnh</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProductID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProductName)
                                        </td>
                                        <td>
                                            <img src="~/img/@item.Image" alt="Ảnh sản phẩm" width="100px" class="img-thumbnail rounded" />
                                        </td>
                                        

                                        <td>
                                            <form asp-action="Restore" asp-controller="Product" asp-route-id="@item.ProductID" method="post"
                                                  onsubmit="return confirm('Bạn chắc chắn muốn khôi phục sản phẩm này?');"
                                                  style="display:inline;">
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fa fa-undo"></i> Khôi phục
                                                </button>
                                            </form>
                                            |
                                            <form asp-action="DeletePermen" asp-controller="Product" asp-route-id="@item.ProductID" method="post"
                                                  onsubmit="return confirm('Bạn chắc chắn muốn xóa sản phẩm này?');"
                                                  style="display:inline;">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fa fa-trash"></i> Xóa vĩnh viễn
                                                </button>
                                            </form>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
