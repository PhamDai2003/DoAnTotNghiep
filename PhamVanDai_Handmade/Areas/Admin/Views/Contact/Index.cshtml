@model IEnumerable<PhamVanDai_Handmade.Models.ContactModel>

@{
    ViewData["Title"] = "Quản lý liên hệ";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Quản lý liên hệ</h1>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh sách tin nhắn liên hệ</h5>

                        <!-- Table with stripped rows -->
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Người gửi</th>
                                    <th>Email</th>
                                    <th>Số điện thoại</th>
                                    <th>Ngày gửi</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.User?.UserName</td>
                                        <td>@item.User?.Email</td>
                                        <td>@item.User?.PhoneNumber</td>
                                        <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            <span class="badge @(item.Status == 0 ? "bg-secondary" : "bg-success")">
                                                @(item.Status == 0 ? "Chưa đọc" : "Đã đọc")
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@item.ContactID" class="btn btn-info btn-sm">
                                                <i class="bi bi-eye"></i> Xem
                                            </a>
                                            |
                                            <form asp-action="Delete" asp-route-id="@item.ContactID" method="post"
                                                  onsubmit="return confirm('Bạn chắc chắn muốn xóa tin nhắn này?');"
                                                  style="display:inline;">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fa fa-trash"></i> Xóa
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>
</main><!-- End #main -->
