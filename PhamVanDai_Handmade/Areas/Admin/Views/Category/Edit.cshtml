@model PhamVanDai_Handmade.Models.CategoryModel

@{
    ViewData["Title"] = "Edit";
}

<style>
    img {
        width: 100%;
    }
</style>
<main id="main" class="main">

    <div class="pagetitle">
        <h1>Quản lý danh mục</h1>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Sửa danh mục</h5>

                        <!-- General Form Elements -->
                        <form method="POST" asp-action="Edit">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input type="hidden" asp-for="CategoryID" />
                            <div class="row mb-4">
                                <label asp-for="CategoryName" class="col-sm-3 col-form-label">Tên danh mục</label>
                                <div class="col-sm-9">
                                    <input asp-for="CategoryName" class="form-control">
                                    <span asp-validation-for="CategoryName" class="text-danger" />

                                </div>
                            </div>
                            <div class="row mb-4">
                                <label asp-for="Description" class="col-sm-3 col-form-label">Mô tả</label>
                                <div class="col-sm-9">
                                    <input asp-for="Description" class="form-control">
                                    <span asp-validation-for="Description" class="text-danger" />

                                </div>
                            </div>
                            <div class="row mb-4">
                                <label asp-for="Status" class="col-sm-3 col-form-label">Trạng thái</label>
                                <div class="col-sm-9">
                                    <select asp-for="Status" class="form-control">
                                        <option value="1">Hiển thị</option>
                                        <option value="0">Ẩn</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger" />
                                </div>
                            </div>

                            <div class="row mb-4">

                                <div class="col-sm-9">
                                    <input type="submit" value="Lưu" class="btn btn-primary" />
                                </div>
                            </div>

                        </form><!-- End General Form Elements -->
                        <div>
                            <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main><!-- End #main -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


