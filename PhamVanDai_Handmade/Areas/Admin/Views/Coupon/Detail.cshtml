@model PhamVanDai_Handmade.Models.CouponModel

@{
    ViewData["Title"] = "Chi tiết Coupon";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Quản lý Coupon</h1>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Chi tiết Coupon</h5>

                        <dl class="row">
                            <dt class="col-sm-3">Mã Code</dt>
                            <dd class="col-sm-9">@Model.Code</dd>

                            <dt class="col-sm-3">Mô tả</dt>
                            <dd class="col-sm-9">@Model.Description</dd>

                            <dt class="col-sm-3">Số tiền giảm</dt>
                            <dd class="col-sm-9">
                                @(Model.DiscountAmount.HasValue ? Model.DiscountAmount.Value.ToString("N0") : "—") ₫
                            </dd>

                            <dt class="col-sm-3">Giá trị tối thiểu</dt>
                            <dd class="col-sm-9">@(Model.MinOrderValue.HasValue ? Model.MinOrderValue.Value.ToString("N0") : "—") ₫</dd>

                            <dt class="col-sm-3">Số lượng</dt>
                            <dd class="col-sm-9">@Model.quantity</dd>

                            <dt class="col-sm-3">Ngày bắt đầu</dt>
                            <dd class="col-sm-9">
                                @(Model.StartDate.HasValue ? Model.StartDate.Value.ToString("dd/MM/yyyy") : "—")
                            </dd>

                            <dt class="col-sm-3">Ngày hết hạn</dt>
                            <dd class="col-sm-9">
                                @(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("dd/MM/yyyy") : "—")
                            </dd>

                            <dt class="col-sm-3">Trạng thái</dt>
                            <dd class="col-sm-9">
                                @(Model.status == 1 ? "Hiển thị" : "Ẩn")
                            </dd>
                        </dl>

                        <div class="mt-3">
                            <a asp-action="Edit" asp-route-id="@Model.CouponID" class="btn btn-warning">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Quay lại
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

</main><!-- End #main -->
