@model IEnumerable<PhamVanDai_Handmade.Models.CouponModel>

@{
    ViewData["Title"] = "Trash";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Quản lý mã giảm giá</h1>
    </div><!-- End Page Title -->

    <div class="mb-3">
        <a asp-action="Index" asp-controller="Coupon" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
        </a>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh sách mã giảm giá đã xóa</h5>
                        <!-- Table with stripped rows -->
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Mã code</th>
                                    <th>Mô tả</th>
                                    <th>Số lượng còn</th>
                                    <th>Tình trạng</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Code</td>
                                        <td>@item.Description</td>
                                        <td>@item.quantity</td>
                                        <td>
                                            <span class="badge @(@item.EndDate > DateTime.Now ? "bg-success" : "bg-danger")">
                                                @(@item.EndDate > DateTime.Now ? "Còn hạn" : "Hết hạn")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @(item.status == 1 ? "bg-success" : "bg-secondary")">
                                                @(item.status == 1 ? "Hoạt động" : "Ẩn")
                                            </span>
                                        </td>
                                        <td>
                                            <form asp-action="Restore" asp-controller="Coupon" asp-route-id="@item.CouponID" method="post"
                                                  onsubmit="return confirm('Bạn chắc chắn muốn khôi phục coupon này?');"
                                                  style="display:inline;">
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fa fa-undo"></i> Khôi phục
                                                </button>
                                            </form>
                                            |
                                            <form asp-action="DeletePermen" asp-controller="Coupon" asp-route-id="@item.CouponID" method="post"
                                                  onsubmit="return confirm('Bạn chắc chắn muốn xóa vĩnh viễn coupon này?');"
                                                  style="display:inline;">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fa fa-trash"></i> Xóa vĩnh viễn
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
